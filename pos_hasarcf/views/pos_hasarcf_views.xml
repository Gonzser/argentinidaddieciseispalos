<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pos_config_view_form_inherit_pos_hasarcf" model="ir.ui.view">
            <field name="name">pos.config.form.inherit.pos.hasarcf</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='customer_display']" position="inside">
                    <div id="pos_hasar" position="">
                        <div class="row mt16">
                            <label string="Discount CF Product" for="iface_hasarcf" class="col-lg-3 o_light_label"/>
                            <field name="iface_hasarcf" />
    <!--                    <field name="iface_hasarcf" attrs="{'required':[('module_pos_hasarcf','=',True)]}" /> -->
                        </div>
                        <div class="row">
                            <label string="Connect on %" for="hasarcf_ip" class="col-lg-3 o_light_label"/>
                            <field name="hasarcf_ip"/>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//div[@id='company']" position="inside">
<!--                    <div attrs="{'invisible': [('iface_tipproduct', '=', False)]}">-->
                    <div class="o_setting_left_pane">
                        <label class="font-weight-normal" for="warehouse_id" string="Select Warehouse to asign POS)"/>
                        <div>
                            <field name="warehouse_id"  class="oe_inline"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <data noupdate="1">
<!--            <function model="pos.config" name="_default_discount_value_on_module_install"/>-->
        </data>

</odoo>
